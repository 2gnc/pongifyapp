{
    "favorites.resources": [
        {
            "filePath": "src/app",
            "group": "Default"
        },
        {
            "filePath": "src/widgets",
            "group": "Default"
        },
        {
            "filePath": "src/features",
            "group": "Default"
        },
        {
            "filePath": "src/entities",
            "group": "Default"
        },
        {
            "filePath": "src/shared",
            "group": "Default"
        }
    ],
    "favorites.sortOrder": "MANUAL",
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    }
}
